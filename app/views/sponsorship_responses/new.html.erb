<div class="container" ng-controller="newSponsorshipResponseFormCtrl">
	<div class="row">
		<div class="col-md-offset-2 col-md-8">
			<img id="top" src="/assets/top.png" alt="">
			<form accept-charset="UTF-8" enctype="multipart/form-data" method="post" action="/sponsorship_responses">
				<%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
				<%= tag(:input, :type => "hidden", :name => 'response[event_id]', :value => @event.id) %>
				<div class="row">
					<div id="form-description">
						<h4>Sponsor an Event!</h4>
						<p>Please fill out all applicable fields.</p>
					</div>
					<hr class="col-md-11 hri">
				</div>
				<div class="questions">

					<!-- sponsor agent name -->
					<div class="row">
						<div class="col-md-12">
							<p class="field-title"><strong>Your name</strong></p>
						</div>
					</div>
					<div class="row">
						<div class="col-md-3">
							<div class="input-group">
								<span class="input-group-addon">First</span>
								<input name="response[first_name]" type="text" class="form-control" placeholder="" maxlength="255">
							</div>
						</div>
						<div class="col-md-4">
							<div class="input-group">
								<span class="input-group-addon">Last</span>
								<input name="response[last_name]" type="text" class="form-control" placeholder="" maxlength="255">
							</div>
						</div>
					</div>


					<!-- sponsor agent email -->
					<div class="row">
						<div class="col-md-12">
							<p class="field-title"><strong>Email</strong></p>
						</div>
					</div>
					<div class="row">
						<div class="col-md-7">
							<div class="input-group">
								<span class="input-group-addon"></span>
								<input name="response[email]" type="email" class="form-control" placeholder="" maxlength="255">
							</div>
						</div>
					</div>

					<!-- phone number -->
					<div class="row">
						<div class="col-md-12">
							<p class="field-title"><strong>Phone</strong></p>
						</div>
					</div>
					<div class="row">
						<div class="col-md-7">
							<div class="input-group">
								<span class="input-group-addon"></span>
								<input name="response[phone_number]" type="text" class="form-control" placeholder="" maxlength="12">
							</div>
						</div>
					</div>

					<!-- company name -->
					<div class="row">
						<div class="col-md-12">
							<p class="field-title"><strong>Company name</strong></p>
						</div>
					</div>
					<div class="row">
						<div class="col-md-7">
							<div class="input-group">
								<span class="input-group-addon"></span>
								<input name="response[company_name]" type="text" class="form-control" placeholder="" maxlength="255">
							</div>
						</div>
					</div>

					<!-- agent's title -->
					<div class="row">
						<div class="col-md-12">
							<p class="field-title"><strong>Your title</strong></p>
						</div>
					</div>
					<div class="row">
						<div class="col-md-7">
							<div class="input-group">
								<span class="input-group-addon"></span>
								<input name="response[title]" type="text" class="form-control" placeholder="" maxlength="255">
							</div>
						</div>
					</div>

					<!-- sponsorship offer -->
					<div class="row">
						<div class="col-md-12">
							<p class="field-title"><strong>Please specify the sponsorship package you are willing to offer</strong></p>
						</div>
					</div>
					<div class="row">
						<div class="col-md-10">
							<textarea name="response[offered_sponsorship]" rows="3"></textarea>
						</div>
					</div>

					<!-- comments -->
					<div class="row">
						<div class="col-md-12">
							<p class="field-title"><strong>Comments</strong></p>
						</div>
					</div>
					<div class="row">
						<div class="col-md-10">
							<textarea name="response[comments]" rows="3"></textarea>
						</div>
					</div>

					<div class="row">
						<div class="col-md-11">
							<input id="btn-sbmt" role="button" class="btn btn-default btn-sm btn-style" type="submit" name="submit"/>
						</div>
					</div>
				</div>
			</form>
			<img id="bottom" src="/assets/bottom.png" alt="">
		</div>
	</div>
</div>