	<!-- padding for taking space from sticky header -->
	<div id="general-div">
		<%= yield %>
	</div>

	<footer id="footer">
		<div class="container">
			<div class="row">
				<div class="col-xs-6 col-md-6">
					<div class="row">
						<h2 class="col-md-12 footer-text">Contact us:</h2>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="row">
								<h5 class="col-md-12 footer-text">Tel: (857) 498-9948</h5>
							</div>
							<div class="row">
								<h5 class="col-md-12 footer-text email-us">Email: <a class="footer-text email-us-link" href="mailto:mrktiers@gmail.com?subject=I have something to say">mrktiers@gmail.com</a></h5>
							</div>
						</div>
						<div class="col-md-6">
							<div class="row">
								<h5 class="col-md-12 footer-text">Location: Harvard Business School, Boston, MA 02163</h5>
							</div>
						</div>
					</div>
				</div>
				<div class="col-xs-offset-3 col-xs-3 col-md-offset-3 col-md-3">
