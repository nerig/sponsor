<div class="container">

	<div class="row">
		<div class="col-xs-12 col-md-offset-2 col-md-8">
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mrktiers-form", method: :post }) do |f| %>

				<div class="row">
					<div class="col-xs-12 col-md-4 form-description">
						<h4>Forgot Your Password?</h4>
					</div>
					<div class="col-xs-12 col-md-8 lower-the-line-less">
						<%= render "devise/shared/links" %>
					</div>
				</div>
				<div class="row">
					<hr class="col-xs-10 col-sm-11 col-md-11 hri">
				</div>

				<div class="questions">
					<div class="row">
						<div class="col-xs-12 col-md-12">
							<p class="field-title"><strong>Email *</strong></p>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-11 col-md-7">
							<div class="input-group">
								<span class="input-group-addon">@</span>
								<input name="user[email]" type="email" class="form-control" ng-minlength="3" ng-maxlength="50" maxlength="50" ng-model="email" required>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col-xs-11 col-md-11">
							<input role="button" class="btn btn-style btn-orange" type="submit" name="submitButton" value="Send me reset password instructions" />
						</div>
					</div>
				</div>

			<% end %>

		</div>
	</div>
</div>