<div class="container">

	<div class="row">
		<div class="col-xs-12 col-md-offset-2 col-md-8">

			<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mrktiers-form" }) do |f| %>
				<div class="row">
					<div class="col-xs-12 col-md-2 form-description">
						<h4>Log in</h4>
					</div>
					<div class="col-xs-12 col-md-10 lower-the-line-less">
						<%= render "devise/shared/links" %>
					</div>
				</div>
				<div class="row">
					<hr class="col-xs-10 col-sm-11 col-md-11 hri">
				</div>

				<div class="questions">
					<div class="row">
						<div class="col-xs-12 col-md-12">
							<p class="field-title"><strong>Email</strong></p>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-11 col-md-7">
							<div class="input-group">
								<span class="input-group-addon">@</span>
								<input name="user[email]" type="email" class="form-control" autofocus required>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col-xs-12 col-md-12">
							<p class="field-title"><strong>Password</strong></p>
						</div>
					</div>
					<div class="row" ng-controller="passwordEyeCtrl">
						<div class="col-xs-11 col-md-7">
							<div class="input-group">
								<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
								<input id="inputPassword" name="user[password]" type="password" class="form-control" autocomplete="off" required>
								<span class="input-group-addon"><i class="glyphicon glyphicon-eye-open change-cursor-to-pointer"></i></span>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col-xs-11 col-md-offset-6 col-md-3 lower-the-line">
							<input name="user[remember_me]" type="hidden" value="0">
							<input name="user[remember_me]" type="checkbox" value="1" />
							<span>Remember me</span>
						</div>
						<div class="col-xs-11 col-md-2">
							<input role="button" class="btn btn-style btn-orange" type="submit" name="submitButton" value="Log in" />
						</div>
					</div>
				</div>
			<% end %>


		</div>
	</div>
</div>

<%= devise_error_messages! %>